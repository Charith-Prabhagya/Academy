<section id="courses">
    {{!-- COURSE DETAILS FORM --}}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="card p-4" id="courseForm">
                    <h2>Adding Courses</h2>
                    <form>
                        <div class="form-group">
                            <label for="nameInput">Course Name:</label>
                            <input class="form-control" id="nameInput" name="name" required>
                        </div>
                        <div class="form-group">
                            <label for="descriptionInput">Description:</label>
                            <input class="form-control" id="descriptionInput" required>
                        </div>
                        <div class="form-group">
                            <label for="categoryInput">Category:</label>
                            <input class="form-control" id="categoryInput" required>
                        </div>
                        <div class="form-group">
                            <label for="authorInput">Author:</label>
                            <input class="form-control" id="authorInput" required>
                        </div>
                        <button type="submit" class="btn btn-success addBtn px-3">Add</button>
                        <button type="button" class="updateBtn btn btn-success" style="display:none">Update</button>
                        <button type="button" class="cancelBtn btn btn-danger" style="display:none">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    {{!-- COURSES VIEW TABLE --}}
    <div class="container my-2">
        <div class="card py-3 px-2">
            <div class="row">
                <div class="col-lg-12">
                    <div class="p-2">
                        <h3>Search Courses</h3>
                        <form class="form-inline">
                            <input type="text" class="form-control" id="searchTable" type="text"
                                placeholder="Type something to search Courses" style="width: 100%">
                        </form>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <table class="table table-striped" style="width: 100%">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">Course Name</th>
                                <th scope="col">Description</th>
                                <th scope="col">Category</th>
                                <th scope="col">Author</th>
                                <th scope="col">#</th>
                                <th scope="col">#</th>
                            </tr>
                        </thead>
                        <tbody id="showcoursetable">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        $("#searchTable").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#showcoursetable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>